      - var videoTitle = 'mLut Insta Pack tutorial'
      include includes/trailer.pug
      a.nav(name="trailer")
      - var title = " Watch trailer"
      - var subtitle = "Boost your videos!"
      - var text = "Check out how mTransition Fade creates unique\n apmosphere in your edits"
      - var videoLink = "//player.vimeo.com/video/110782329?title=0&amp;byline=0&amp;portrait=0"
      - var videoPlaceholder = "https://i.vimeocdn.com/video/495154119?mw=1000&mh=562"
      - var videoTitle = 'mLut Insta Pack trailer'
      include includes/trailer.pug

      -
        var showcaseData = [
          {
            src: '/images/test_2.mp4',
            alt: 'alt',
            subtitle: 'beautiful compositions and dynamic shots?',
            title: 'Diversified, ready-made, and easy to use',
            text: 'These video stylizations are just an endless source of creative ideas for your work. Mix and match various effects to generate even more looks and invent visualizations.'
          },
          //- {
          //-   src: '/images/test_3.mp4',
          //-   alt: 'alt',
