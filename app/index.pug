doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title
      | {% if product.productdetails.meta_title %}{{
      | product.productdetails.meta_title }}{% else %}{% trans %}motionVFX -
      | Original Home of Apple Motion Templates and Final Cut Pro X Plugins{%
      | endtrans %}{% endif %}
    link(rel='shortcut icon' href='css/static/images/favicon.png' type='image/png')
    //- FONTS
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,600;0,700;0,800;1,300;1,400;1,600;1,700;1,800&display=swap" rel="stylesheet">

    link(href='css/vendor/custom_pages_wrap.css' rel="stylesheet" type="text/css")
    link(href='css/vendor/bootstrap-4.1.3.min.css' rel="stylesheet" type="text/css")
    link(href='css/vendor/menu.css' rel='stylesheet' type="text/css")

    script(src='scripts/vendor/jquery-3.4.1.min.js')
    script(src='scripts/vendor/bootstrap-4.1.3.bundle.min.js')
    script(src='scripts/vendor/custom_pages_wrap.js')
    script(src='scripts/vendor/menu.js')

    - var mediaRootUrl = '/images'
    - var templateImagesUrl = '/images'
    - var getParsedImage = (name, type = "placeholder") => `\${require('${name}').${type}}`

    -
      var placeholders = {
        image: {
          hd: () => `https://via.placeholder.com/1920x1080/${(Math.random() * 0xFFFFFF << 0).toString(16).padStart(6, '0')}`,
          logo: () => `https://via.placeholder.com/320x160/${(Math.random() * 0xFFFFFF << 0).toString(16).padStart(6, '0')}`,
          preset: () => `https://via.placeholder.com/320x180/${(Math.random() * 0xFFFFFF << 0).toString(16).padStart(6, '0')}`,
          icon: (size) => `https://via.placeholder.com/${size}x${size}/${(Math.random() * 0xFFFFFF << 0).toString(16).padStart(6, '0')}`,
        },
        video: {
          youtube: 'https://www.youtube.com/embed/5iPH-br_eJQ?rel=0',
          videoTitle: 'This is video title',
          vimeo: 'https://player.vimeo.com/video/112879331'
        },
        text: {
          display: 'This is display',
          lorem: 'Lorem ipsum dolor sit amet consectetur adipisicing elit. Dicta iusto minima eaque fuga ab quas, illo alias aliquid est facere, praesentium tenetur soluta magnam quae sint non unde voluptatibus voluptatum.',
          loremShort: 'Lorem ipsum dolor sit amet consectetur adipisicing elit. Dicta iusto minima eaque fuga ab quas, illo alias aliquid est facere.',
          title: 'This is title',
          subtitle: 'This is subtitle'
        }
      }

  body
    include includes/submenu.pug
    include includes/navbar.pug
    .top-bar
    main.mDonut
      include includes/header.pug
      a(href="#" class="scroll-to-btn" onclick="scrollToAnchor('trailer');" tabindex="-1")
      a.nav(name="trailer")
      - var sectionClasses = 'trailer bg__light'
      - var title = "WATCH TRAILER"
      - var subtitle = 'See them at work!'
      - var text = 'View the presets in action and watch them create a unique visual form of the ideas you want to realize.'
      //- - var videoLink = "https://www.youtube.com/embed/pBP5UxWD2BA?rel=0"
      - var videoLink = "pBP5UxWD2BA"
      //- - var videoPlaceholder = "https://i.vimeocdn.com/video/495154119?mw=1000&mh=562"
      - var videoTitle = placeholders.video.videoTitle
      include includes/video.pug

      a.nav(name="tutorial")
      //- - var background = '/images/tutorial_bg.jpg'
      - var sectionClasses = 'tutorial bg__dark'
      - var title = "WATCH TUTORIAL"
      - var subtitle = 'Learn to maximize your effects!'
      - var text = 'Get the know-how to make your work the most effective and master your campaigns!'
      - var videoLink = "Q3U2_llmIIE"
      //- - var videoPlaceholder = "https://i.ytimg.com/vi/YxPrtn64rFQ/maxresdefault.jpg"
      - var videoTitle = placeholders.video.videoTitle
      include includes/video.pug
      //- include includes/new-interface.pug

      -
        var images = [
          {
            src: `/images/slide_1.jpg`,
            alt: 'This is alt',
            //- icon: '/images/solid.png',
            //- text: 'solid'
          },
          {
            src: `/images/slide_2.jpg`,
            alt: 'This is alt',
            //- icon: '/images/pixel.png',
            //- text: 'pixelate'
          },
          {
            src: `/images/slide_3.jpg`,
            alt: 'This is alt',
            //- icon: '/images/blur.png',
            //- text: 'blur'
          }
        ]
      
      - var active = (index) => `${index === 0 && 'active' }`

      section.showcase
        div#carouselExamples(class=`case__item case__item--2 carousel slide carousel-fade`)
          .case__item__bg
            include includes/components/slider.pug
            //- - var image = `/images/fade_bg_1.jpg`
            //- - var alt = ''
            //- - var imageWidth = '2560'
            //- - var imageHeight = '1150'
            //- include includes/components/image.pug
            //- img(src=placeholders.image.hd(), alt="")
          .case__item__body
            .container
              .row
                -
                  var sliderTitler = [
                    'Different effect styles',
                    'test test derest',
                    'Different effect styles3'
                  ]
                div(class=`col-6`)
                  .section__head
                    h2.section__subtitle Illustrate diverse concepts & bring your ideas to life
                    //- this will be changing
                    .carousel-test.carousel__titles
                      each sT, index in sliderTitler
                        p(class=`carousel-title section__title ${active(index)}`)=sT
                    p.section__text This collection of handy, pre-animated elements lets you build a whole layout to illustrate your videos and enrich your edits. Attract donators, supporters, and clients, and raise enough money to accomplish the goal.
                .col-6
                  .carousel-test.carousel__contents
                    each sT, index in sliderTitler
                      div(class=`carousel-title section__title ${active(index)}`)
                        - if (index === 0)
                          img.showcase__bg__deco(src='/images/donna.png', alt="", srcset="")
                          .contents__wrapper
                            include includes/svg/artist.pug
                        - if (index === 1)
                          .contents__wrapper
                            include includes/svg/it.pug
                        - if (index === 2)
                          .contents__wrapper
                            include includes/svg/forest_1.pug
      -
        var miniImages = [
          {
            src: `/images/mini_slider_1.jpg`,
            alt: ''
          },
          {
            src: `/images/mini_slider_2.jpg`,
            alt: ''
          },
          {
            src: `/images/mini_slider_3.jpg`,
            alt: ''
          },
          {
            src: `/images/mini_slider_4.jpg`,
            alt: ''
          },
          {
            src: `/images/mini_slider_5.jpg`,
            alt: ''
          },
          {
            src: `/images/mini_slider_6.jpg`,
            alt: ''
          }
        ]

      section.showcase
        div#carouselContinuous(class=`case__item case__item--2 carousel slide carousel-continuous`)
          .case__item__bg
            //- include includes/components/slider.pug
            .carousel-inner
              each img, index in miniImages
                div(class=`carousel-item ${active(index)}`)
                  //- - var image = img.src
                  //- - var alt = img.alt
                  //- - var imageWidth = '2560'
                  //- - var imageHeight = '1150'
                  //- - var sizes = '100vw'
                  //- include image.pug
                  img.d-block(src=img.src alt=img.alt)
      -
        var logos = [
          {
            src: `/images/logo_1.png`,
            alt: ``
          },
          {
            src: `/images/logo_2.png`,
            alt: ``
          },
          {
            src: `/images/logo_3.png`,
            alt: ``
          },
          {
            src: `/images/logo_4.png`,
            alt: ``
          }
        ]
      section.showcase.bg__dark.showcase__2
        .case__item__bg
          .image__comp
            .img--main
              img(src=`/images/campaign.jpg`, alt="", srcset="")
            .image__comp__side
              .image__head
                p Helpful companies
              .image__body
                each img, index in logos
                  img(src=img.src, alt=img.alt, srcset="")
              .image__footer
                button.btn.btn-cta Become a patron
        .case__item__body
          .container
            .row
              div(class=`col-12`)
                .section__head
                  h2.section__subtitle A complete visual toolbox
                  p.section__title Establish a successful donation campaign
                  p.section__text Whatever your goal is - introducing it in a visually appealing form will help you reach it and stay in the memory of more people. Make your cause more convincing and extend your fanbase!
                .section__body
                  img(src=`/images/campaign_donate.png`, alt="", srcset="")

      //- include includes/split-image.pug
      include includes/presets.pug
      a.nav(href="#" name='specs', rel="noopener noreferrer") 
      include includes/tech-spec.pug
      include includes/minstaller.pug
      include includes/footer.pug
