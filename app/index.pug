doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title
      | {% if product.productdetails.meta_title %}{{
      | product.productdetails.meta_title }}{% else %}{% trans %}motionVFX -
      | Original Home of Apple Motion Templates and Final Cut Pro X Plugins{%
      | endtrans %}{% endif %}
    link(rel='shortcut icon' href='css/static/images/favicon.png' type='image/png')
    //- FONTS
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Hind+Siliguri:wght@400;600;700&display=swap" rel="stylesheet">

    link(href='css/custom_pages_wrap.css' rel="stylesheet" type="text/css")
    link(href='css/bootstrap-4.1.3.min.css' rel="stylesheet" type="text/css")
    link(href='css/menu.css' rel='stylesheet' type="text/css")

    script(src='scripts/jquery-3.4.1.min.js')
    script(src='scripts/bootstrap-4.1.3.bundle.min.js')
    script(src='https://s3.motionvfx.com/mvfxpublic/products/templates/source/media/scroll_to_anchor.js')
    script(src='scripts/custom_pages_wrap.js')
    //- script(src='scripts/beforeafter.js')
    script(src='scripts/scroll_to_anchor.js')
    script(src='scripts/menu.js')

    - var mediaRootUrl = '/images'
    - var templateImagesUrl = '/images'
    - var getParsedImage = (name, type = "placeholder") => `\${require('${name}').${type}}`

    -
      var placeholders = {
        image: {
          hd: 'https://via.placeholder.com/1920x1080',
          logo: 'https://via.placeholder.com/320x160',
          preset: 'https://via.placeholder.com/320x180',
        },
        video: {
          youtube: 'https://www.youtube.com/embed/5iPH-br_eJQ?rel=0',
          videoTitle: 'This is video title',
          vimeo: 'https://player.vimeo.com/video/112879331'
        },
        text: {
          display: 'This is dispaly',
          lorem: 'Lorem ipsum dolor sit amet consectetur adipisicing elit. Dicta iusto minima eaque fuga ab quas, illo alias aliquid est facere, praesentium tenetur soluta magnam quae sint non unde voluptatibus voluptatum.',
          title: 'This is title',
          subtitle: 'This is subtitle'
        }
      }

  body
    include includes/submenu.pug
    include includes/navbar.pug
    .top-bar
    main.mCensor
      include includes/header.pug
      a(href="#" class="scroll-to-btn" onclick="scrollToAnchor('trailer');" tabindex="-1")
      a.nav(name="trailer")
      - var title = "WATCH TRAILER"
      - var subtitle = placeholders.text.subtitle
      - var text = placeholders.text.lorem
      - var videoLink = placeholders.video.vimeo
      //- - var videoPlaceholder = "https://i.vimeocdn.com/video/495154119?mw=1000&mh=562"
      - var videoTitle = placeholders.video.videoTitle
      include includes/video.pug
      a.nav(name="tutorial")
      - var sectionClasses = 'tutorial'
      - var title = "WATCH TUTORIAL"
      - var subtitle = placeholders.text.subtitle
      - var text = placeholders.text.lorem
      - var videoLink = placeholders.video.youtube
      //- - var videoPlaceholder = "https://i.ytimg.com/vi/YxPrtn64rFQ/maxresdefault.jpg"
      - var videoTitle = placeholders.video.videoTitle
      include includes/video.pug

      -
        var showcaseData = [
          {
            //- src: ['/images/up.mp4', '/images/test_3.mp4'],
            alt: 'alt',
            subtitle: 'Match the movement with any video',
            //- title: 'Diverse, effective & fully customizable',
            text: 'Several adjustable presets and custom movements set directly in the viewport give you creative freedom and let you work with ease. From quick slides and zooms to long blackouts - this pack has got you covered.'
          }
        ]

      section.showcase
        div(class=`case__item case__item--2`)
          .case__item__bg
            //- - var image = `/images/fade_bg_1.jpg`
            //- - var alt = ''
            //- - var imageWidth = '2560'
            //- - var imageHeight = '1150'
            //- include includes/components/image.pug
            img(src=placeholders.image.hd, alt="")
          .case__item__body
            .container
              .row
                div(class=`col-md-6`)
                  .section__head
                    h2.section__subtitle=placeholders.text.subtitle
                    p.section__title=placeholders.text.title
                    p.section__text.section__text--inset=placeholders.text.lorem
        //- each val, index in showcaseData
          - var offset = index + 1
          div(class=`case__item case__item--${index}`)
            .case__item__bg
              img(src=placeholders.image.hd, alt="")
              //- video(src='/images/up.mp4' controls=false, muted, playsinline)
              //- video(src='/images/test_3.mp4' controls=false, muted, playsinline)
                //- each src in val.src
                  source(src=src type='video/mp4')
            .case__item__body
              .container
                .row
                  div(class=`col-md-6 ${offset % 2 === 0 ? '' : 'offset-md-6'}`)
                    .section__head
                      h2.section__subtitle= val.subtitle
                      p.section__title
                        | Diverse, effective 
                        br
                        | & fully customizable
                      p.section__text.section__text--inset= val.text
      include includes/presets.pug
      a.nav(href="#" name='specs', rel="noopener noreferrer") 
      include includes/tech-spec.pug
      include includes/minstaller.pug
      include includes/footer.pug
