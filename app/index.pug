  body
    //- include includes/submenu.pug
    include includes/navbar.pug
    .top-bar
    main.mInstaller
      include includes/header.pug
      //- a(name="installation" href="#", rel="noopener noreferrer") 
      a.nav(name="trailer")
      - var title = " Watch trailer"
      - var subtitle = "See it in action!"
      - var text = "Check out how mTransition Fade creates unique\n apmosphere in your edits"
      - var videoLink = "//player.vimeo.com/video/110782329?title=0&amp;byline=0&amp;portrait=0"
