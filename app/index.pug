          //-   title: 'Diversified, ready-made, and easy to use',
          //-   text: 'These video stylizations are just an endless source of creative ideas for your work. Mix and match various effects to generate even more looks and invent visualizations.'
          //- },
        ]

      section.showcase
        each val, index in showcaseData
          - var offset = index + 1
          div(class=`case__item case__item--${index}`)
            .case__item__bg
              video(controls=false, autoplay, muted, playsinline)
                source(src=val.src type='video/mp4')
            .case__item__body
              .container
                .row
                  div(class=`col-md-6 ${offset % 2 === 0 ? '' : 'offset-md-6'}`)
                    .section__head
                      h2.section__subtitle= val.subtitle
                      p.section__title= val.title
                      p.section__text.section__text--inset= val.text
        div(class=`case__item case__item--2`)
          .case__item__bg
            img(src='/images/fade_bg_1.jpg', alt="")
            //- video(controls=false, autoplay, muted, playsinline)
            //-   source(src=)
          .case__item__body
            .container
              .row
                div(class=`col-md-6`)
                  .section__head
                    h2.section__subtitle #{'beautiful compositions and dynamic shots?'}
                    p.section__title #{'Diversified, ready-made, and easy to use'}
                    p.section__text.section__text--inset #{'These video stylizations are just an endless source of creative ideas for your work. Mix and match various effects to generate even more looks and invent visualizations.'}
