  var techSpecData = [
    {
      name: 'Supported software',
      value: 'FCP 10.5'
    },
    {
      name: 'Includes',
      value: 'Over 160 titles for FCP'
    },
    {
      name: 'Size',
      value: '517 MB'
    },
    {
      name: 'Music used in trailer',
      value: {
        title: 'Artlist.io - When I Get There',
        link: 'https://www.premiumbeat.com/royalty-free-tracks/are-u-man-enough'
      }
    },
    {
      name: 'Music used in tutorial',
      value: {
        title: 'Artlist.io - You Are My Sunlight',
        link: 'https://artlist.io/song/2896/by-my-side'
      }
    }
  ]
section.tech-spec
  .tech-spec__bg
    video(autoplay muted loop)
      source(src="/images/hud_linear_techspec.mp4" type="video/mp4")
  .container
    .row
      .col-12
        .tech-spec-info
          h2.tech-spec__title Technical specification
          table.tech-spec__table
            for val in techSpecData
              tr
                td.td-right= val.name
                if val.value.title
                  td.td-left
                    a(href=val.value.link, target="_blank", rel="noopener noreferrer")= val.value.title
                else
                  td.td-left= val.value