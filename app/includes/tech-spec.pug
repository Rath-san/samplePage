-
  var techSpecData = [
    {
      name: 'System',
      value: 'Mac OS X 10.10.5 \n(or later)'
    },
    {
      name: 'Includes',
      value: '30 FCPX titles'
    },
    {
      name: 'Size',
      value: '139.9 MB'
    },
    {
      name: 'Music used in trailer',
      value: {
        title: 'Premiumbeat.com - Are U Man Enough',
        link: 'https://www.premiumbeat.com/royalty-free-tracks/are-u-man-enough'
      }
    },
    {
      name: 'Music used in tutorial',
      value: {
        title: 'K. Solis - By My Side',
        link: 'https://artlist.io/song/2896/by-my-side'
      }
    }
  ]

section.tech-spec
  .container
    .row
      .col-12
        .tech-spec-info
          h2.tech-spec__title Technical specification
          table.tech-spec__table
            for val in techSpecData
              tr
                td.td-right= val.name
                if val.value.title
                  td.td-left
                    a(href=val.value.link, target="_blank", rel="noopener noreferrer")= val.value.title
                else
                  td.td-left= val.value
