- var placeholder = getParsedImage(image)
- var srcset = getParsedImage(image, 'srcSet')

div(id=id, style=`background-color: ${bgc || '#333'};`).img-lazy
  .placeholder(style=`
      padding-bottom: calc(${imageHeight} / ${imageWidth} * 100%);
      background: url(${placeholder}) center no-repeat;
      background-size: cover;
  `)
  img(
    alt=alt,
    data-src=placeholder,
    data-srcset=srcset,
    sizes=sizes || '(max-width: 1024px) 50vw, 100vw'
  )
