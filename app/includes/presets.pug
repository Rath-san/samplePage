  var sections = [
    { 'name':'Campaign_Element', 'label': 'Campaign', 'count': 20,},
    { 'name':'Donation', 'label': 'Donation', 'count': 12,},
    { 'name':'Infographic', 'label': 'Infographic', 'count': 7,},
    { 'name':'List', 'label': 'List', 'count': 7,},
    { 'name':'Typography', 'label': 'Typography', 'count': 14,}
  ]
- var totalIndex = sections.reduce((a, b) => a + b.count, 0 )

