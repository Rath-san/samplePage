section(class=`video ${sectionClasses}`)
  - if (background)
    .image__background
      - var image = background
      - var alt = 'Pixelated background'
      - var imageWidth = '2560'
      - var imageHeight = '1150'
      - var sizes = ''
      include components/image.pug
  .container.text-center
    .row
      .col
        .section__head
          h2.section__subtitle=title
          p.section__title #{subtitle}
          p.section__text #{text}
        .yt.embed-responsive.embed-responsive-16by9.animated.animated--fade--bottom
          iframe(
            src=videoLink,
            srcdoc=videoPlaceholder ? `
              <style>
                * {
                    padding:0;
                    margin:0;
                    overflow:hidden
                  }
                html,
                body {
                  height:100%
                }
                img,
                span {
                  position:absolute;
                  width:100%;
                  top:0;
                  bottom:0;
                  margin:auto
                }
                span {
                  height:1.5em;
                  text-align:center;
                  font:48px/1.5 sans-serif;
                  color:white;
                  text-shadow:0 0 0.5em black
                }
                </style>
                <a href=${videoLink}&autoplay=1>
                  <img src=${videoPlaceholder} alt=${title}>
                  <span>
                    <svg viewBox="0 -77 512.00213 512" xmlns="http://www.w3.org/2000/svg">
                      <path
